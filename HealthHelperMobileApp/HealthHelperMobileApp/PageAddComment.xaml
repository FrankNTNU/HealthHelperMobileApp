<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HealthHelperMobileApp.PageAddComment">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="HealthHelper 新增評論" 
                   HorizontalTextAlignment="Center" 
                   TextColor="White"
                   FontSize="30"
                   BackgroundColor="DarkGreen"
                   Padding="10"/>
            <StackLayout Padding="10">
                <Label Text="餐點名稱:" TextColor="Black" FontSize="20" />
                <Label x:Name="lblMealName" Text="{Binding MealName}"
                   TextColor="blue" FontSize="30"/>
                <Label Text="標題:" TextColor="Black" FontSize="20"/>
                <Entry x:Name="txtTitle" TextColor="Black" FontSize="20"/>
                <Label Text="留言內容:" TextColor="Black" FontSize="20"/>
                <Entry x:Name="txtComment" TextColor="Black" FontSize="20"/>
            </StackLayout>
            <Button Text="新增" TextColor="Black" FontSize="30" BackgroundColor="MediumAquamarine"
                    Clicked="BtnAdd_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>